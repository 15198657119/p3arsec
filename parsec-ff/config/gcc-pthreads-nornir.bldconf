source ${PARSECDIR}/config/gcc-pthreads.bldconf

NORNIRDIR=${PARSECDIR}/pkgs/libs/nornir/src
# Enable FastFlow
CFLAGS="${CFLAGS} -I${NORNIRDIR}"
CXXFLAGS="--std=c++11 ${CXXFLAGS} -I${NORNIRDIR}"
LIBS="${LIBS} -pthread -lnornir"
LDFLAGS="${LDFLAGS} -L${NORNIRDIR}"
